<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="发送自定义的Parcelable对象"
        android:textAllCaps="false"
        android:onClick="sendCustomParcelable"/>

    <Button
        android:id="@+id/btn2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="发送精心构造的Parcelable对象"
        android:textAllCaps="false"
        android:onClick="sendSpecialParcelable"/>

    <Button
        android:id="@+id/btn3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Intent传递大数据"
        android:textAllCaps="false"
        android:onClick="sendBigData"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAllCaps="false"
        android:text="吞掉BadParcelableException异常"
        android:onClick="eatBadParcelableException"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAllCaps="false"
        android:text="reset重置"
        android:onClick="reset"/>

</LinearLayout>